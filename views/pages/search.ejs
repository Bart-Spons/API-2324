<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Search</title>
  </head>
  <body>
    <h1>Search</h1>

    <form action="/search" method="get">
      <input
        type="text"
        name="search"
        value="<%= searchQuery %>"
        placeholder="Search for movies..."
      />
      <button type="submit">Search</button>
    </form>

    <%- include('../components/api.ejs') %>
  </body>
</html>
